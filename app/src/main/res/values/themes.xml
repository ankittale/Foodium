<resources>
    <!-- Base application theme. -->
    <style name="Theme.Foodium" parent="Base.Theme.Foodium" />

    <style name="Base.Theme.Foodium" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.App.ActionMode</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationViewStyle</item>
        <!--<item name="android:homeAsUpIndicator">@drawable/ic_arrow_back</item>-->
        <!--<item name="actionModeCloseDrawable">@drawable/ic_arrow_back</item>-->
    </style>

    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/contextualActionBarColor</item>
        <item name="textBackground">@color/contextualActionBarColor</item>
    </style>

    <style name="SplashScreenStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>


    <style name="FoodActionBarStyle" parent="Widget.Material3.ActionBar.Solid">
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:iconTint">@color/white</item>
    </style>

    <style name="DetailsActivityStyle" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/actionBarBackgroundColor</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/chip_text_color</item>
    </style>

    <style name="CustomBottomNavigationViewStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/bottomNavBackground</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
    </style>

</resources>